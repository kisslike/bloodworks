#version 150
uniform sampler2D uTexture0;
uniform vec4 uCrop;

in vec4 vColor;
in vec2 vVertexUV;
in vec3 worldPos;

out vec4 outColor;

void main(void) 
{
	if (worldPos.x < uCrop[0] || worldPos.y < uCrop[1]
	 || worldPos.x > uCrop[2] || worldPos.y > uCrop[3])
	{
		discard;
	}
	vec4 v = texture2D(uTexture0, vVertexUV) * vColor;
	outColor = v;
}
