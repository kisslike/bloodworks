#version 150
uniform sampler2D uTexture0;

varying vec2 vVertexUV;
varying vec2 vUVMid;
varying vec2 vUVSize;
varying vec4 vColor;

void main(void) 
{
	gl_FragColor = texture2D(uTexture0, vVertexUV);
    gl_FragColor.rgb *= vColor.rgb;
    
    gl_FragColor.a *= 1.0 - length ( (vVertexUV - vUVMid ) / vUVSize ) / ( 0.5 * 0.5);
    gl_FragColor.a = ( gl_FragColor.a - 0.1 ) * 1.5;
    gl_FragColor.a  = clamp(gl_FragColor.a  * abs(gl_FragColor.a) * vColor.a, 0.0, 1.0) * 0.4;
}
